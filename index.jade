    script
      var frag = document.createDocumentFragment()
        , temp = document.createElement('div');
      temp.className = 'bg';
      frag.appendChild(temp);

      var sections = document.querySelectorAll('section');
      for( var i=0; i < sections.length; i++ )
        sections[i].insertBefore(frag.cloneNode(true),sections[i].firstChild);

      var arr = "2012-10-12 17:00:00".split(/[- :]/)
        , date = new Date(arr[0], arr[1]-1, arr[2], arr[3], arr[4], arr[5]);

      var time = document.getElementById('time').lastChild;
      setInterval(function(){
          var t = (date - new Date()) / 1000;
          t = t.toFixed(2).split('.');
          var te = '<span class="milli">'+t[0]+'</span>' + '<span class="period">.</span><span class="deci">' + t[1] + '</span>';
          while( t.length < 13 ) {
            te = '0'+te;
            t = '0'+t;
          }
          time.innerHTML = te;
      }, 10)