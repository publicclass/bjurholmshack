@import 'nib'

$color = #434343
$updates = #f7f6a1
$about = #9ae3ef
$contact = #a8efe1
$photos = #e4ceed
$thoughts = #f9c7d0
$work = #f9c7d0

global-reset()

@font-face
  font-family 'NB55RLSRegular'
  src url('http://publicclass.s3.amazonaws.com/bjurholmslan/fonts/nb55rms-webfont.eot')
  src url('http://publicclass.s3.amazonaws.com/bjurholmslan/fonts/nb55rms-webfont.eot?#iefix') format('embedded-opentype'), url('http://publicclass.s3.amazonaws.com/bjurholmslan/fonts/nb55rms-webfont.woff') format('woff'), url('http://publicclass.s3.amazonaws.com/bjurholmslan/fonts/nb55rms-webfont.ttf') format('truetype'), url('http://publicclass.s3.amazonaws.com/bjurholmslan/fonts/nb55rms-webfont.svg#NB55RLSRegular') format('svg');
  font-weight normal
  font-style normal
  
headerFont()
  font-family: 'NB55RLSRegular', Helvetica, Arial, sans-serif;
  letter-spacing: 0.1em;
  line-height 1em
  text-transform uppercase
  -webkit-font-smoothing antialiased
  -webkit-text-size-adjust none

bodyFont()
  font-family 'Courier new', sans-serif, Arial

/* GLOBALS */
html
  background #E9E9E9
  height 100%
  transition background .3s

body
  bodyFont()
  font-size 13px
  background transparent
  color $color
  margin 0 auto
  width 980px
  overflow-x hidden
  padding-top 40px

h1, h2, h3
  headerFont()
  letter-spacing -0.02em

h1
  font-size 44px

p
  line-height 1.9em

header#header
  background $thoughts
  padding-top 30px
  color #434343
  position relative
  box-shadow 0 0 45px 5px rgba(0, 0, 0, 0.1)
  height 300px
  box-sizing border-box

  h1, h2
    font-size 60px
    margin-bottom 0

  h3
    position absolute
    right 60px
    top 40px

    a
      display block
      width 220px
      height 220px
      border-radius 220px
      background #393939
      font-size 35px
      color #FFF
      text-decoration none
      padding 110px 0
      line-height 0
      text-align center
      box-sizing border-box

section, header, footer
  margin-left -60px
  width 1080px
  padding 60px

  h1
    margin-bottom 44px

section
  
  position relative
  height 320px
  box-sizing border-box
  perspective 200px

  > * 
    position relative
    z-index 3

  .bg
    box-shadow 0 15px 45px 5px rgba(0, 0, 0, 0.1)
    position absolute
    z-index 1
    top 0
    bottom 0
    left 0
    right 0
    transform-style preserve-3d

section:nth-child(2n+1)
  .bg
    // transform perspective(210px) rotateX(-1deg) scale(1.015)
    // margin-top 6px

section:nth-child(2n)
  .bg
    // transform perspective(200px) rotateX(1deg) scale(1.015) translateZ(-10) 

#info
  .bg
    background $about
  p
    column-count 3
    column-gap 60px

#who
  .bg
    background $updates

  position relative

  ul
    padding-right 200px
    list-style none
    column-count 4
    li
      margin-bottom 10px
      &:before 
        content "-"
        position relative
      &.free
        span
          padding 2px 0
          background $about


#count
  position absolute
  top 60px
  right 60px
  text-align center
  h2
    font-size 44px
  h3
    font-size 140px

#how
  .bg
    background $photos

  a
    color #434343

#where
  .bg
    background $contact

#map
  position absolute
  right 60px
  top 50px
  height 215px
  overflow hidden

#time
  .bg
    background #eeeeee
  time 
    font-size 150px
    color #CCC
    headerFont()
    letter-spacing -0.01em
    line-height .5em

    .deci
      color $thoughts
    .milli
      color $contact


  div
    column-count 3
  article
    height 150px
    width 260px
    padding-right 
    h3
      font-size 25px
      line-height 2em
      a
        text-decoration none
        color #434343

footer
  text-align center
  text-transform uppercase
  box-sizing border-box
  ul
    margin-top 32px
  li
    display inline
    padding 25px